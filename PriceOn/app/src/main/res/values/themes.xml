<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PriceOn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/my_light_primary_variant</item> <!-- Or colorPrimaryDark for Material 1 -->
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/my_light_secondary_variant</item> <!-- Or colorAccent for Material 1 -->
        <item name="customPriceColor">@color/my_light_primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/my_light_surface</item>
        <item name="colorOnSurface">@color/my_light_on_surface</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.PriceOn" parent="Base.Theme.PriceOn" />
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/my_dark_primary_variant</item>
        <item name="elevation">8dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_text_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">36dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.ProductTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>