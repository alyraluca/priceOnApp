<!-- res/layout/item_supermarket_info.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/supermarketLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Logo de supermercado" />

    <TextView
        android:id="@+id/supermarketName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/supermarketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/customPriceColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/supermarketUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Ahora un ImageView clicable en lugar de ImageButton -->
    <ImageView
        android:id="@+id/btnUpdateSuperPrice"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/actualizar"
        android:contentDescription="Actualizar precio"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/colorOnSurface" />
</LinearLayout>
